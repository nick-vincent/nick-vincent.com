        .addEventListener('click', function(e) {
          e.preventDefault();

          if (document.documentElement.classList.contains('inverse-mode')) {
            document.documentElement.classList.remove('inverse-mode');
          } else {
            document.documentElement.classList.add('inverse-mode');
          }
        });
